<div class="section">
    <div class="container">
        <section class="hero">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title">
                        EDITAR REGISTRO DE PRODUCTO
                    </h1>
                    <h1>{{data.name}}</h1>
                </div>
            </div>
        </section>
        <form action="/petto/product/update/{{data.id}}" method="POST">
            <div class="field">
                <label class="label">Nombre</label>
                <div class="control has-icons-left has-icons-right">
                    <input class="input is-success" type="text" name="name" value="{{data.name}}">
                    <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                    </span>
                </div>
            </div>

            <div class="field">
                <label class="label">Descripci√≥n</label>
                <div class="control has-icons-left has-icons-right">
                    <input class="input" type="text" name="description" value="{{data.description}}">
                    <span class="icon is-small is-left">
                        <i class="fas fa-user"></i>
                    </span>
                    <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                    </span>
                </div>
            </div>


            <div class="field">
                <label class="label">Tipo de Producto</label>
                <div class="control">
                    <input class="input" name="product_type_id" type="text" value="{{data.product_type_id}}">
                </div>
            </div>


            <div class="field">
                <label class="label">Precio</label>
                <div class="control">
                    <input class="input" name="price" type="number" value="{{data.price}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Stock</label>
                <div class="control">
                    <input class="input" name="stock" type="text" value="{{data.stock}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Estado</label>
                <div class="control">
                    <input class="input" name="is_active" type="text" value="{{data.is_active}}">
                </div>
            </div>
            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Guardar</button>
                </div>
                <div class="control">
                    <a href="/petto/product/" class="button is-link is-light">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>