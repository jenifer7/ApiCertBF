<div class="section">
    <div class="table-container">
        <section class="hero">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title">
                        VENTAS
                    </h1>
                </div>
            </div>
        </section>
        <p id="uno"></p>
        <table class="table">
            <thead>
                <tr>
                    <th colspan="2">Cliente</th>
                    <th>Fecha Venta</th>
                    <th>Total Venta</th>
                    <th>Vendedor</th>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{ name }}</td>
                    <td>{{ lastname }}</td>
                    <td>{{ sale_date }}</td>
                    <td>{{ total_sale }}</td>
                    <td>{{ username }}</td>
                    <td><a class="button" href="/petto/sale/show/{{id}}">Detalle</a></td>
                    <td><a class="button" href="">Editar</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
