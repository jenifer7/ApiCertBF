<div class="section">
    <div class="container">
        <form action="/petto/user/update/{{dato.id}}" method="POST">
            <div class="field">
                <label class="label">Usuario</label>
                <div class="control">
                    <input class="input" name="username" type="text" placeholder="" autofocus value="{{dato.username}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Email</label>
                <div class="control">
                    <input class="input" name="email" type="email" placeholder="" value="{{dato.email}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Contrase√±a</label>
                <div class="control">
                    <input class="input" name="password" type="password" placeholder="" value="{{dato.password}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Estado</label>
                <div class="control">
                    <input class="input" name="is_active" type="text" placeholder="" value="{{dato.is_active}}">
                </div>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Guardar</button>
                </div>
                <div class="control">
                    <a href="/petto/user/" class="button is-link is-light">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>