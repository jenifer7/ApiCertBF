<div class="section">
    <div class="container">
        <section class="hero">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title">
                        EDITAR REGISTRO DE EMPLEADO
                    </h1>
                    <h1>{{data/data.[0].name}}</h1>
                </div>
            </div>
        </section>
        <form action="/petto/employee/update/{{data/data.[0].id}}" method="POST">
            <div class="field">
                <label class="label">DPI</label>
                <div class="control">
                    <input class="input" name="dpi" type="text" value="{{data/data.[0].dpi}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Nombre</label>
                <div class="control has-icons-left has-icons-right">
                    <input class="input is-success" type="text" name="name" value="{{data/data.[0].name}}">
                    <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                    </span>
                </div>
            </div>

            <div class="field">
                <label class="label">Apellidos</label>
                <div class="control has-icons-left has-icons-right">
                    <input class="input" type="text" name="lastname" value="{{data/data.[0].lastname}}">
                    <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                    </span>
                </div>
            </div>

            <div class="field">
                <label class="label">Fecha de Nacimiento</label>
                <div class="control">
                    <input class="input" name="birthdate" type="date" value="{{data/data.[0].birthdate}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Genero</label>
                <div class="control">
                    <input class="input" name="gender" type="text" value="{{data/data.[0].gender}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Telefono</label>
                <div class="control">
                    <input class="input" name="phone" type="tel" value="{{data/data.[0].phone}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Direccion</label>
                <div class="control">
                    <input class="input" name="address" type="text" value="{{data/data.[0].address}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Usuario</label>
                <div class="control">
                    <input class="input" name="user_id" type="text" value="{{data/data.[0]/user.[0].username}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Estado</label>
                <div class="control">
                    <input class="input" name="is_active" type="text" value="{{data/data.[0].is_active}}">
                </div>
            </div>
            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Guardar</button>
                </div>
                <div class="control">
                    <a href="/petto/employee/" class="button is-link is-light">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>