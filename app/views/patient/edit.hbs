<div class="section">
    <div class="container">
            <section class="hero">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title">
                        EDITAR PACIENTE    
                    </h1>
                    <h2>{{dato.name}}</h2>
                </div>
            </div>
        </section>
        <form action="/petto/patient/update/{{dato.id}}" method="POST">
            <div class="field">
                <label class="label">Nombre</label>
                <div class="control has-icons-left has-icons-right">
                    <input class="input is-success" type="text" placeholder="Nombre" name="name" value="{{dato.name}}">
                    <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                    </span>
                </div>
            </div>

            <div class="field">
                <label class="label">Especie</label>
                <div class="control has-icons-left has-icons-right">
                    <input class="input" type="text" placeholder="Especie" name="species" value="{{dato.species}}">
                    <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                    </span>
                </div>
            </div>

            <div class="field">
                <label class="label">Descripci√≥n</label>
                <div class="control">
                    <input class="input" name="description" type="text" placeholder="" value="{{dato.description}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Genero</label>
                <div class="control">
                    <input class="input" name="gender" type="text" placeholder="" value="{{dato.gender}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Peso</label>
                <div class="control">
                    <input class="input" name="weight" type="text" placeholder="" value="{{dato.weight}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Edad</label>
                <div class="control">
                    <input class="input" name="age" type="text" placeholder="" value="{{dato.age}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Propietario</label>
                <div class="control">
                    <input class="input" name="client_id" type="text" placeholder="" value="{{dato.client_id}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Estado Clinico</label>
                <div class="control">
                    <input class="input" name="patient_status_id" type="text" placeholder=""
                        value="{{dato.patient_status_id}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Estado</label>
                <div class="control">
                    <input class="input" name="is_active" type="text" placeholder=""
                        value="{{dato.is_active}}">
                </div>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Guardar</button>
                </div>
                <div class="control">
                    <a href="/petto/patient/" class="button is-link is-light">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>