<div class="section">
    <div class="container">
        <section class="hero is-link">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title is-l">
                        AGREGAR CLIENTE
                    </h1>
                </div>
            </div>
        </section>
        <br>
        <form action="/petto/client/" method="POST">
            <div class="field">
                <label class="label">DPI</label>
                <div class="control">
                    <input class="input" name="dpi" type="text" placeholder="Ingrese Numero de IdentificaciÃ³n" autofocus>
                </div>
            </div>

            <div class="field">
                <label class="label">Nombre</label>
                <div class="control has-icons-left has-icons-right">
                    <input class="input is-success" type="text" placeholder="Nombre" name="name" value="">
                    <span class="icon is-small is-left">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
            </div>

            <div class="field">
                <label class="label">Apellidos</label>
                <div class="control has-icons-left has-icons-right">
                    <input class="input" type="text" placeholder="Apellidos" name="lastname" value="">
                    <span class="icon is-small is-left">
                        <i class="fas fa-user"></i>
                    </span>
                    <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                    </span>
                </div>
            </div>

            <div class="field">
                <label class="label">Telefono</label>
                <div class="control">
                    <input class="input" name="phone" type="tel" placeholder="">
                </div>
            </div>

            <div class="field">
                <label class="label">Direccion</label>
                <div class="control">
                    <input class="input" name="address" type="text" placeholder="">
                </div>
            </div>

            <div class="field">
                <label class="label">Email</label>
                <div class="control">
                    <input class="input" name="email" type="email" placeholder="">
                </div>
            </div>

            <div class="field">
                <label class="label">Estado</label>
                <div class="control">
                    <input class="input" name="is_active" type="text" placeholder="">
                </div>
            </div>
            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Guardar</button>
                </div>
                <div class="control">
                    <a href="/petto/client/" class="button is-link is-light">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>