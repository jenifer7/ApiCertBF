<div class="section">
    <div class="table-container">
            <section class="hero">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title">
                        PRODUCTOS
                    </h1>
                </div>
            </div>
        </section>
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripci√≥n</th>
                    <th>Tipo de Producto</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{ name }}</td>
                    <td>{{ description }}</td>
                    <td>{{ type }}</td>
                    <td>{{ price }}</td>
                    <td>{{ stock }}</td>
                    <td>{{ is_active }}</td>
                    <td><a class="button" href="/petto/product/show/{{id}}">Detalle</a></td>
                    <td><a class="button is-link" href="/petto/product/edit/{{id}}">Editar</a></td>
                    <td>
                        <form action="/petto/product/destroy/{{id}}" method="POST">
                            <button class="button">Eliminar</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>