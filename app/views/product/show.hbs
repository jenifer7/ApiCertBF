<div class="section">
    <div class="container">
        <section class="hero">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title">
                        PRODUCTO
                    </h1>
                    <h1>{{data/data.[0].name}}</h1>
                </div>
            </div>
        </section>
        <form action="" method="POST">
            <div class="field">
                <label class="label">Nombre</label>
                <div class="control has-icons-left has-icons-right">
                    <input class="input is-success" type="text" name="name" value="{{data/data.[0].name}}">
                    <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                    </span>
                </div>
            </div>

            <div class="field">
                <label class="label">Descripci√≥n</label>
                <div class="control has-icons-left has-icons-right">
                    <input class="input" readonly type="text" name="description" value="{{data/data.[0].description}}">
                    <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                    </span>
                </div>
            </div>


            <div class="field">
                <label class="label">Tipo de Producto</label>
                <div class="control">
                    <input class="input" readonly name="product_type_id" type="text" value="{{data/data.[0]/type.[0].type}}">
                </div>
            </div>


            <div class="field">
                <label class="label">Precio</label>
                <div class="control">
                    <input class="input" readonly name="price" type="number" value="{{data/data.[0].price}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Stock</label>
                <div class="control">
                    <input class="input" readonly name="stock" type="text" value="{{data/data.[0].stock}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Estado</label>
                <div class="control">
                    <input class="input" readonly name="is_active" type="text" value="{{data/data.[0].is_active}}">
                </div>
            </div>
            <div class="field is-grouped">
                <div class="control">
                    <a class="button is-link is-light" href="/petto/product/">Regresar</a>
                </div>
            </div>
        </form>
    </div>
</div>